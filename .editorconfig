root = true

[*]
indent_style = space
indent_size = 4

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{html,css,scss,coffee,js,jsx,ts,tsx,mdx,json,rb,erb,yaml,yml,sh,proto,tf}]
indent_size = 2
